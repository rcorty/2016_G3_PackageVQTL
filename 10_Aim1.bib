journal = {Proceedings of the National Academy of Sciences},
number = {21},
pages = {6706--6711},
pmid = {25953335},
title = {{Behavioral idiosyncrasy reveals genetic control of phenotypic variability}},
volume = {112},
year = {2015}
}
