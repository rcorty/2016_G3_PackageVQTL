journal = {Animal Behaviour},
keywords = {Behavioural predictability,Behavioural variability,Drosophila melanogaster,Intraindividual variability,Personality},
number = {3},
pages = {641--649},
pmid = {24098058},
title = {{Genotypic differences in behavioural entropy: Unpredictable genotypes are composed of unpredictable individuals}},
volume = {86},
year = {2013}
}
