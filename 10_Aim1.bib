keywords = {,Gene-gene and gene-environment interactions,Genome-wide association studies,Nonparametric test,Quantitative trait,Quantitative traits},
number = {4},
pages = {323--333},
pmid = {23512279},
title = {{A Nonparametric Test to Detect Quantitative Trait Loci Where the Phenotypic Distribution Differs by Genotypes}},
