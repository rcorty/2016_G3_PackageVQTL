journal = {Proceedings of the National Academy of Sciences of the United States of America},
number = {21},
pages = {13783--13788},
pmid = {12368469},
title = {{Increased noise as an effect of haploinsufficiency of the tumor-suppressor gene neurofibromatosis type 1 in vitro.}},
volume = {99},
year = {2002}
}
