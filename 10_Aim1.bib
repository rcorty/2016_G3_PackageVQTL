@article{Makumburage2011-oz,
abstract = {For crop production it is desirable for the mapping between
genotype and phenotype to be consistent, such that an optimized
genotype produces uniform sets of individual plants. Uniformity
is strongly selected in breeding programs, usually
automatically, as harvest equipment eliminates severely
non-uniform individuals. Uniformity is genetically controlled,
